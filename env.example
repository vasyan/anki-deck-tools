DATABASE_URL=sqlite:///anki_vector_db.db

# Server configuration
API_PORT=8000
LOG_LEVEL=INFO

# AnkiConnect configuration
ANKI_CONNECT_URL=http://localhost:8765
ANKI_CONNECT_TIMEOUT=30

# LM Studio configuration
# LM_STUDIO_URL=http://127.0.0.1:1234/v1
LOCAL_MODEL_THAI=lm_studio/typhoon2.1-gemma3-4b-mlx

OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI TTS configuration
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_FORMAT=mp3
OPENAI_TTS_RATE_LIMIT=60
OPENAI_TTS_VOICE=alloy

# Smart Anki Update Configuration
PRESERVE_USER_MODIFICATIONS=true
SYNC_TAG_PREFIX=sync::
MERGE_STRATEGY=conservative
