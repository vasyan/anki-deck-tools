<h3>Examples:</h3>
{% for fragment in fragments %}
<ul>
  {% if fragment.fragment_type == 'real_life_example' %}
    <li>
      <div>
        {{ fragment.native_text }}
        [sound:asset_{{fragment.assets[0].id}}.mp3]
      </div>
      <div>
        {{ fragment.ipa }}
      </div>
      <div>
        {{ fragment.body_text }}
      </div>
      {% if fragment.extra %}
        <div>
          ({{ fragment.extra  }})
        </div>
      {% endif %}

    </li>
  {% endif %}
</ul>
{% endfor %}
