{{translation}}
<h3>Examples:</h3>
{% for fragment in fragments %}
<ul>
  {% if fragment.fragment_type == 'real_life_example' %}
    <li>
      <div>
        <span class="text-thai">{{ fragment.native_text }}</span>
        {% if fragment.assets and fragment.assets[0] %}
          [sound:asset_{{fragment.assets[0].id}}.mp3]
        {% endif %}
      </div>
      <div>
        <span class="text-ipa">[{{ fragment.ipa }}]</span>
      </div>
      <div>
        {{ fragment.body_text }}
      </div>
      {% if fragment.extra %}
        <div>
          ({{ fragment.extra  }})
        </div>
      {% endif %}
    </li>
  {% endif %}
</ul>
{% endfor %}
